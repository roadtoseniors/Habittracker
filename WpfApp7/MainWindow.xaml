<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login/Registration" Height="350" Width="400">
    <Grid>
        <TabControl>
            <!-- Вкладка "Вход" -->
            <TabItem Header="Login">
                <StackPanel Margin="20">
                    <TextBlock Text="Username:" />
                    <TextBox x:Name="LoginUsername" Margin="0,5,0,10" Width="257" />
                    <TextBlock Text="Password:" />
                    <PasswordBox x:Name="LoginPassword" Margin="0,5,0,10" />
                    <Button Content="Login" Click="LoginButton_Click" />
                    <TextBlock x:Name="LoginMessage" Foreground="Red" Margin="0,10,0,0" />
                </StackPanel>
            </TabItem>

            <!-- Вкладка "Регистрация" -->
            <TabItem Header="Register">
                <StackPanel Margin="20">
                    <TextBlock Text="Username:" />
                    <TextBox x:Name="RegisterUsername" Margin="0,5,0,10" />
                    <TextBlock Text="Password:" />
                    <PasswordBox x:Name="RegisterPassword" Margin="0,5,0,10" />
                    <TextBlock Text="Confirm Password:" />
                    <PasswordBox x:Name="RegisterConfirmPassword" Margin="0,5,0,10" />
                    <Button Content="Register" Click="RegisterButton_Click" />
                    <TextBlock x:Name="RegisterMessage" Foreground="Red" Margin="0,10,0,0" />
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>